# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Markdown settings (trailing spaces can be significant for hard line breaks)
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = 80

# HTML/CSS/JS/TS
[*.{html,htm}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,scss}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,mjs,cjs,ts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JSON / manifest files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Go files â€” use tabs to align with gofmt and the Go toolchain (necessary exception)
[*.go]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Justfile
[Justfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

# Lock files and binary assets
[*.lock]
trim_trailing_whitespace = false
insert_final_newline = false

[*.png]
charset = binary

[*.jpg]
charset = binary

[*.gif]
charset = binary

# End of file
